<main>
  <p id="notice">Welcome! You have signed up successfully.</p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
             <h2>User info</h2>
             <% if @user.profile_image.attached? %>
               <%= image_tag @user.profile_image, size: "100x100" %>
             <% else %>
               <%= image_tag 'no_image', size: "100x100" %>
             <% end %>
            <table class="table">
              <tbody><tr></tr>
                <tr>
	                <th>name</th>
	                <th><%= @user.name %></th>
                </tr>
                <tr>
	                <th>introduction</th>
	                <th></th>
                </tr>
              </tbody>
            </table>
            
            <div class="row">
              <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
                <i class="fa fa-user-cog fa-w-20"></i>
              
              <% end %>
            </div>
            
                <h2 class="mt-3">New book</h2>
               
                <%= form_with model: Book.new do |f| %>
                <div class="form-group">
                  <label for="book_title">Title</label>
                  <input class="form-control book_title" type="text" name="book[title]" id="book_title">
                </div>
                <div class="form-group">
                  <label for="book_opinion">Opinion</label>
                  <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
                </div>
                <div class="form-group">
                  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
                </div>
               
              <% end %>
              
        </div>  
          
          
        
  

